<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/pagamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagamento de:"
                    android:layout_marginLeft="22sp"
                    android:textColor="@color/branca"
                    android:textSize="16sp"/>

            <TextView
                android:id="@+id/holder_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holder"
                android:layout_toRightOf="@+id/pagamento"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="@color/verde"
                />


                <TextView
                    android:id="@+id/email"
                    android:text="Pagamento para"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/branca"
                    android:textSize="16sp"
                    android:layout_marginLeft="22sp"
                    android:layout_below="@+id/pagamento"/>


                <TextView
                    android:id="@+id/name_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holder"
                    android:textColor="@color/verde"
                    android:textSize="16sp"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@+id/email"
                    android:layout_below="@+id/pagamento"
                    />


                <TextView
                    android:id="@+id/numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_bank"
                    android:text="Numero de"
                    android:layout_marginLeft="22sp"
                    android:textSize="16sp"
                    android:textColor="@color/branca"/>


                <TextView
                    android:id="@+id/description_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holder"
                    android:layout_toRightOf="@+id/numero"
                    android:layout_below="@+id/email"
                    android:layout_marginLeft="49dp"
                    android:textColor="@color/verde"
                    />

                <Button
                    android:id="@+id/button_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/numero"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/button_corners"
                    android:text="Ver mais detalhes"/>
            </RelativeLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>